                            <td align="left" class="header_text">
                                Password:
                            </td>
                            <td align="left">
                                <input type="password" name="pass1" size="18" maxlength="128">
                            </td>
                            <td>
                                <img src="/images/nothing.gif" height="1" width="1">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <img src="/images/nothing.gif" height="5" width="1">
