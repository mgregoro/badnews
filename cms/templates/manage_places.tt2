[% INCLUDE tool_top %]
<!-- $Id: manage_places.tt2 428 2006-08-30 02:00:57Z corrupt $ -->
<tr valign="top">
    <td>
        <table width="90%" cellspacing="0" cellpadding="0" align="center">
            <tr valign="top">
                <td>
                    <table width="100%" align="left" cellspacing="0" cellpadding="0">
                        <tr valign="top">
                            <td colspan="3">
                                <img src="nothing.gif" height="15" width="1">
                            </td>
                        <tr valign="top">
                            <form name="add_place" action="manage_places" method="post">
                                <input type="hidden" name="func" value="add"> 
                                <td colspan="3" align="right" width="25%" class="normal_text">
                                    Add Place: <input type="text" name="add_place" size="24" maxlength="255"> <input type="submit" value="Add">
                                </td>
                            </tr>
                            <tr valign="top">
                            <td colspan="3" align="right" width="25%" class="normal_text">
                            Allow Overlapping Events (in this place):
                                <input type="checkbox" value = "1" name="allow_overlap" [% IF ci.c.ALLOW_EVENT_OVERLAP %] checked [% END %]>
                            </td>
                            </tr>
                            </form>
                    <form name="delete_places" action="manage_places" method="post">
                    <input type="hidden" name="func" value="delete">
                            <tr>
                                <td colspan="3">
                                    <img src="nothing.gif" height="15" width="1">
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" class="header_text">
                                    Delete
                                </td>
                                <td width="50%" class="header_text">
                                    Place 
                                </td>
                                <td width="40%" align="right">
                                    <input type="submit" value="Delete Checked">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <img src="nothing.gif" height="5" width="1">
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            [% altrow = 0 %]
            [% FOREACH place = ci.list_event_places %]
            <tr>
                <td class="altrow_[% altrow %]">
                    <table width="100%" align="left" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="10%">
                                <input type="checkbox" name="[% place %]">
                            </td>
                            <td width="90%" class="normal_text">
                                [% place %]
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            [% IF altrow == 1 %]
                [% altrow = 0 %]
            [% ELSE %]
                [% altrow = 1 %]
            [% END %]
            [% END %]
        </form>
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
            <script language="javascript">
                document.add_place.add_place.focus();
            </script>
        </table>
    </td>
</tr>
[% INCLUDE tool_bottom %]
