[% INCLUDE header %]
<!-- $Id: login.tt2 428 2006-08-30 02:00:57Z corrupt $ -->
    <table width="100%" height="100%" cellspacing="0" cellpadding="0">
        <tr height="33%">
            <td>
                <img src="../../theme_images/control_panel/nothing.gif" height="1" width="1">
