                                        <table width="320" height="180" cellspacing="0" cellpadding="1" align="center" valign="center">
                                            <tr>
                                                <td colspan="4">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="center" colspan="4">
                                                    <div class="normal_text">BadNews Content Management Login</div>
                                                </td>
                                            </tr>
                                            <form name="login" action="login" method="post">
                                            <input type="hidden" name="back" value="[% back %]">
                                            <tr>
                                                <td colspan="4">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="25%">
                                                    &nbsp;
                                                </td>
                                                <td colspan="1" align="left" width="25%">
                                                    <div class="normal_text">Login:</div>
                                                </td>
                                                <td colspan="1" align="left" width="25%">
                                                    <input type="text" size="16" maxlength="28" name="username">
                                                </td>
                                                <td width="25%">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="25%">
                                                    &nbsp;
                                                </td>
                                                <td colspan="1" align="left" width="25%">
                                                    <div class="normal_text">Password:</div>
                                                </td>
                                                <td colspan="1" align="left" width="25%">
                                                    <input type="password" size="16" maxlength="28" name="password">
                                                </td>
                                                <td width="25%">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">
                                                    <div class="error_text" align="center">[% error.login %]</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" width="75%">
                                                    &nbsp;
                                                </td>
                                                <td width="25%">
                                                    <input type="submit" value="Login" name="submit">
                                                    <img src="../../theme_images/control_panel/nothing.gif" height="1" width="10">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">
                                                    &nbsp;
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td width="33%">
                            &nbsp;
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr height="34%" valign="bottom">
            <td align="right">
                <div class="tiny_text"> BadNews CMS [% version %] &copy; 2006 the mg2 organization </div>
            </td>
