    <fg_color>#333333</fg_color>
    <alt_highlight>#000000</alt_highlight>
    <text_highlight>#FF99FF</text_highlight>
    <ac_color1>#FF66FF</ac_color1>
    <ac_color2>#0192CB</ac_color2>
    <drop_shadow>#777777</drop_shadow>
    <input_box>#666666</input_box>
    <article_code>#BCD8E3</article_code>
    <article_note>#FFFF99</article_note>

    <!-- theme fonts config -->
    <tiny_font_size>10px</tiny_font_size>
    <small_font_size>11px</small_font_size>
    <default_font_size>12px</default_font_size>
    <medium_font_size>16px</medium_font_size>
